@model Aula15_InserindoDados_BLL.Aluno

<table style="font-family:Arial; border:1px solid black; width:500px">
    <tr>
        <td>
            <img src="@Url.Content(Model.Foto)" alt="@Model.Texto" width="100" height="100" />
        </td>
        <td>
            <table>
                <tr>
                    <td>
                        <b>Nome:</b>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Nome)
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>Idade:</b>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Idade)
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>Data Inscrição:</b>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.DataInscricao)
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>
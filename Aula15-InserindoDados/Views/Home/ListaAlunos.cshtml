@model IEnumerable<Aula15_InserindoDados_BLL.Aluno>

@foreach (var item in Model)
{
    <table style="font-family:Arial; border:1px solid black; width:500px">

        <tr>

            <td>
                <img src="@Url.Content(item.Foto)" alt="@item.Texto" width="100" height="100" />
            </td>

            <td>

                <table>
                    <tr>
                        <td>
                            <b>Nome:</b>
                        </td>
                        <td>
                            @item.Nome
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <b>Idade:</b>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Idade)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <b>Data Inscrição:</b>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataInscricao)
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
}

